@using ECommerce.MVC.ViewModels

@model PaginationInfo

<link rel="stylesheet" href="~/css/pagination.css" />

<nav aria-label="Page navigation example">
    <ul class="pagination">

        <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
            <a class="page-link" href="?PageNumber=@(Model.CurrentPage <= 1 ? 1 : Model.CurrentPage - 1)">Previous</a>
        </li>

        @for (int i = 0; i < Math.Ceiling((decimal)Model.Count / Model.PageSize); i++)
        {
            <li class="page-item @(Model.CurrentPage == (i + 1) ? "active" : "")">
                <a class="page-link" href="?PageNumber=@(i + 1)">@(i + 1)</a>
            </li>
        }

        @{
            var totalPages = (int)Math.Ceiling((decimal)Model.Count / Model.PageSize);
        }

        <li class="page-item @(Model.CurrentPage >= totalPages ? "disabled" : "")">
            <a class="page-link" href="?PageNumber=@(Model.CurrentPage >= totalPages ? totalPages : Model.CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>