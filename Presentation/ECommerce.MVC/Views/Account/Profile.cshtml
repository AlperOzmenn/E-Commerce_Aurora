 @model ECommerce.MVC.ViewModels.AccountVMs.ProfileVM

@{
    ViewData["Title"] = "Profil Bilgilerim";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout kullanıyorsan
}

<link href="~/css/profile.css" rel="stylesheet" />

<div class="profile-card" role="main" aria-label="Kullanıcı Profil Bilgileri">
    <div class="avatar" title="Profil Fotoğrafını Değiştir" tabindex="0" aria-describedby="avatar-desc">
        
        <div class="edit-avatar" aria-label="Profil Fotoğrafını Düzenle" role="button" tabindex="0" title="Profil Fotoğrafını Düzenle">✎</div>
        <span id="avatar-desc" class="visually-hidden">Profil fotoğrafı</span>
    </div>
    <div class="welcome-msg">Merhaba, @Model.Name @Model.Surname! <span class="badge">Premium</span></div>
    <div class="profile-info">
        <div class="info-row">
            <svg class="info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4S14.21 4 12 4 8 5.79 8 8s1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" /></svg>
            <div class="info-label">Ad Soyad</div>
            <div class="info-value">@Model.Name @Model.Surname</div>
        </div>
        <div class="info-row">
            <svg class="info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M20 4H4a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2zm0 2v.01L12 13 4 6.01V6h16z" /></svg>
            <div class="info-label">Email</div>
            <div class="info-value">@Model.Email</div>
        </div>
        <div class="info-row">
            <svg class="info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" /></svg>
            <div class="info-label">Kullanıcı Adı</div>
            <div class="info-value">@Model.UserName</div>
        </div>
    </div>
    <a href="/Account/ProfileEdit" class="edit-btn" role="button" aria-label="Profili Düzenle">Profili Düzenle</a>
    <div class="social-icons" aria-label="Sosyal Medya Bağlantıları">
        <a href="#" class="social-icon" aria-label="Twitter" tabindex="0">
            <svg viewBox="0 0 24 24"><path d="..." /></svg>
        </a>
        <a href="#" class="social-icon" aria-label="LinkedIn" tabindex="0">
            <svg viewBox="0 0 24 24"><path d="..." /></svg>
        </a>
        <a href="#" class="social-icon" aria-label="Instagram" tabindex="0">
            <svg viewBox="0 0 24 24"><path d="..." /></svg>
        </a>
    </div>
</div> 
















