@model ProductCreateDTO

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/userCreate.css" />
}

<div class="create-container">
    <div class="create-card">
        <h2 class="form-title">Yeni Ürün Ekle</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

            <div class="form-group">
                <label asp-for="Name">Ürün Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Ürün adını giriniz" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Açıklama</label>
                <input asp-for="Description" class="form-control" placeholder="Açıklama giriniz" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UnitPrice">Fiyatı</label>
                <input asp-for="UnitPrice" class="form-control" placeholder="Fiyat giriniz" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
              
            <div class="form-group">
                <label asp-for="Discount">İndirim Yüzdesi</label>
                <input asp-for="Discount" class="form-control" placeholder="İndirim giriniz" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ImageUrl">Ürün Resmi </label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL'si gir" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock">Stok Sayısı</label>
                <input asp-for="Stock" class="form-control" placeholder="Stok sayısı giriniz" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Brand">Marka</label>
                <input asp-for="Brand" class="form-control" placeholder="Marka giriniz" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color">Renk</label>
                <input asp-for="Color" class="form-control" placeholder="Renk giriniz" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            @* CategoryId için DropDown *@
            <div class="form-group">
                @Html.LabelFor(m => m.CategoryId)
                @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.Categories, "Kategori Seçiniz", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn-submit">Oluştur</button>
            </div>
        </form>

        <div class="back-link">
            <a asp-action="Index">← Ürün listesine dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}