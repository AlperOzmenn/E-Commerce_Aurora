@model IEnumerable<ProductListDTO>

@{
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
    ViewData["Title"] = "Ürün Listesi";
    int rowNumber = 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/user.css" />
}

<div class="content-header">
    <h2 class="page-title">Ürün Listesi</h2>
    <a asp-area="Seller" asp-controller="Product" asp-action="Create" class="btn-primary btn-icon">
        <img src="~/images/icons/category-create-icon.png" alt="Product Create  Icon" class="btn-icon-img" />
        <span>Ürün Ekle</span>
    </a>
    <a asp-controller="Product" asp-action="Trash" class="btn-primary btn-icon">
        <img src="~/images/icons/trash-icon.png" alt="Trash Icon" class="btn-icon-img" />
        <span>Silinen Ürünler</span>
    </a>
</div>

<div class="table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                <th>@Html.DisplayNameFor(m => m.First().Description)</th>
                <th>@Html.DisplayNameFor(m => m.First().UnitPrice)</th>
                <th>@Html.DisplayNameFor(m => m.First().Discount)</th>
                <th>@Html.DisplayNameFor(m => m.First().FinalPrice)</th>
                <th>@Html.DisplayNameFor(m => m.First().ImagePath)</th>
                <th>@Html.DisplayNameFor(m => m.First().Stock)</th>
                <th>@Html.DisplayNameFor(m => m.First().CreatedDate)</th>
                <th>@Html.DisplayNameFor(m => m.First().UpdatedDate)</th>
                <th>@Html.DisplayNameFor(m => m.First().DeletedDate)</th>
                <th>@Html.DisplayNameFor(m => m.First().IsDeleted)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Discount</td>
                    <td>@item.FinalPrice</td>
                    <td>
                        <img src="~/images/productsImages/@item.ImagePath" onerror="this.src='/images/icons/produt-icon.png'" alt="Ürün" class="table-avatar" />
                    </td>
                    <td>@item.Stock</td>
                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.UpdatedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@item.DeletedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@(item.IsDeleted ? "Silinmiş" : "Aktif")</td>
                    <td class="action-links">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">Detay</a> |
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Sil</a> 
                   @*      <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silmek istediğinize emin misiniz?');" Sil</a> *@
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</div>