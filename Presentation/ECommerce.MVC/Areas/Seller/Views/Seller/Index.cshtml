                        <td>
                            <button class="btn btn-edit">Düzenle</button>
                            <button class="btn btn-delete">Sil</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="orders-list">
            <h2 class="section-title">Son Siparişler</h2>
            <table>
                <thead>
                    <tr>
                        <th>Sipariş ID</th>
                        <th>Müşteri</th>
                        <th>Ürün</th>
                        <th>Adet</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#001235</td>
