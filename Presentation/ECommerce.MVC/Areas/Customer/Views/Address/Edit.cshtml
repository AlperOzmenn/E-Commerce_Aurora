@model ECommerce.Application.DTOs.AddressDTOs.AddressUpdateDTO

@{
    ViewData["Title"] = "Adres Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/userCreate.css" />
}

<div class="create-container">
    <div class="create-card">
        <h2 class="form-title">Adres Düzenle</h2>
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label asp-for="AddressTitle">Adres Başlığı</label>
                <input asp-for="AddressTitle" class="form-control" placeholder="Ev, İş, Yazlık vs." />
                <span asp-validation-for="AddressTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AddressText">Adres</label>
                <input asp-for="AddressText" class="form-control" placeholder="Açık adres girin" />
                <span asp-validation-for="AddressText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City">Şehir</label>
                <input asp-for="City" class="form-control" placeholder="Şehir girin" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Region">Bölge / Mahalle</label>
                <input asp-for="Region" class="form-control" placeholder="İlçe veya semt girin" />
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-submit">Kaydet</button>
            </div>
        </form>

        <div class="back-link">
            <a asp-action="Index">← Adres listesine dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
