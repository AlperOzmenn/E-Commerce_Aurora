                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
 *@
            <div class="form-group">
                <label for="SelectedRole">Rol</label>
                <select asp-for="SelectedRole" class="form-control" asp-items="ViewBag.RoleList">
                    <option value="">Rol seçiniz</option>
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>

@* 
            <div class="form-group">
                <label asp-for="SelectedRole">Rol</label>
                <select asp-for="SelectedRole" class="form-control">
                    <option value="">Rol seçiniz</option>
                    @foreach (var role in (SelectList)ViewBag.RoleList)
                    {
                        <option value="@role.Value" selected="@(Model.SelectedRole == role.Value)">
                            @role.Text
                        </option>
                    }
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div> *@

            @* <div class="form-group">
                <label asp-for="Image">Profil Resmi</label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <button type="submit" class="btn-submit">Güncelle</button>
            </div>
        </form>

        <div class="back-link">
            <a asp-action="Index">← Kullanıcı listesine dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}