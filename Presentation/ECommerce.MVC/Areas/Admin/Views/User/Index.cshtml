@model ListViewModel<AppUserListDTO>


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Kullanıcı Listesi";

    // Sayfa numarasına göre satır numarası başlatılıyor
    int rowNumber = ((Model.PaginationInfo.CurrentPage - 1) * Model.PaginationInfo.PageSize) + 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/user.css" />
}

<div class="content-header">
    <h2 class="page-title">Kullanıcı Listesi</h2>

    <a asp-area="Admin" asp-controller="User" asp-action="Trash" class="btn-primary btn-icon">
        <img src="~/images/icons/trash-icon.png" alt="Trash Icon" class="btn-icon-img" />
        <span>Silinen Kullanıcılar</span>
    </a>
</div>

<!-- Arama Çubuğu -->
@await Html.PartialAsync("~/Views/Shared/Partials/_SearchBar.cshtml", Model.SearchQuery)

<div class="table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Name)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Surname)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Email)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Image)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Role)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().CreatedDate)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().UpdatedDate)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().DeletedDate)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().IsDeleted)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>
                        <img src="/images/userProfiles/@item.Image" onerror="this.src='/images/userProfiles/default-profile.png'" alt="profil" class="table-avatar" />
                    </td>
                    <td>@(string.IsNullOrEmpty(item.Role) ? "Rol Yok" : item.Role)</td>
                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.UpdatedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@item.DeletedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@(item.IsDeleted ? "Silinmiş" : "Aktif")</td>
                    <td class="action-links">
                        <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                        <a asp-area="Admin" asp-controller="User" asp-action="Detail" asp-route-id="@item.Id">Detay</a> |
                        <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">Sil</a> |
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("~/Views/Shared/Partials/_Pagination.cshtml", Model.PaginationInfo)