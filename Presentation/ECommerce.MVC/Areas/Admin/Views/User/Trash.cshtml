@model ListViewModel<AppUserListDTO>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Silinmiş Kullanıcı Listesi";
    // Satır numarası başlat
    int rowNumber = ((Model.PaginationInfo.CurrentPage - 1) * Model.PaginationInfo.PageSize) + 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/user.css" />
}

<div class="content-header">
    <h2 class="page-title">Silinen Kullanıcılar</h2>
</div>

<!-- Arama Çubuğu (opsiyonel) -->
@await Html.PartialAsync("~/Views/Shared/Partials/_SearchBar.cshtml", Model.SearchQuery)

<div class="table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().Surname) </th>
                <th>@Html.DisplayNameFor(model => model.Items.First().Email)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().Image)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().CreatedDate)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().UpdatedDate)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().DeletedDate)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().IsDeleted)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>
                        @* <img src="@item.Image" onerror="this.src='/images/userProfile/defaultProfile.png'" alt="profil" class="table-avatar" /> *@
                        <img src="/images/userProfile/defautProfile.png" onerror="this.src='/images/userProfile/defaultProfile.png'" alt="profil" class="table-avatar" />
                    </td>
                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.UpdatedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@item.DeletedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@(item.IsDeleted ? "Silinmiş" : "Aktif")</td>
                    <td class="action-links">
                        <a asp-area="Admin" asp-controller="User" asp-action="Restore" asp-route-id="@item.Id" onclick="return confirm('Geri yüklemek istediğinize emin misisniz?');">Geri Yükle</a> |
                        <a asp-area="Admin" asp-controller="User" asp-action="HardDelete" asp-route-id="@item.Id" onclick="return confirm('Kalıcı olarak silmek istediğinize emin misiniz?');">Kalıcı Sil</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
        
    </table>
    <div class="action-links">
        <a asp-action="Index" class="btn-back">← Listeye dön</a>
    </div>
</div>
@await Html.PartialAsync("~/Views/Shared/Partials/_Pagination.cshtml", Model.PaginationInfo)