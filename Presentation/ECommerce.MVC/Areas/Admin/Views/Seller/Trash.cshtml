@model ListViewModel<SellerListDTO>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Silinen Satıcılar";
    // Satır numarası başlat
    int rowNumber = ((Model.PaginationInfo.CurrentPage - 1) * Model.PaginationInfo.PageSize) + 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/user.css" />
}

<div class="content-header">
    <h2 class="page-title">Silinen Satıcılar</h2>
</div>

<!-- Arama Çubuğu (opsiyonel) -->
@await Html.PartialAsync("~/Views/Shared/Partials/_SearchBar.cshtml", Model.SearchQuery)

<div class="table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Name)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Surname)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Email)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().CompanyName)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().ContactName)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().ContactTitle)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().Approved)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().CreatedDate)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().UpdatedDate)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().DeletedDate)</th>
                <th>@Html.DisplayNameFor(m => m.Items.First().IsDeleted)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.CompanyName</td>
                    <td>@item.ContactName</td>
                    <td>@item.ContactTitle</td>
                    <td>
                        @if (item.Approved)
                        {
                            <span class="badge bg-success">Onaylı</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                        }
                    </td>
                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.UpdatedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@item.DeletedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@(item.IsDeleted ? "Silinmiş" : "Aktif")</td>
                    <td class="action-links">
                        <a asp-area="Admin" asp-controller="Seller" asp-action="Restore" asp-route-id="@item.Id">Geri Yükle</a> |
                        <a asp-area="Admin" asp-controller="Seller" asp-action="HardDelete" asp-route-id="@item.Id" onclick="return confirm('Kalıcı olarak silmek istediğinize emin misiniz?');">Kalıcı Sil</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
    <div class="action-links">
        <a asp-action="Index" class="btn-back">← Listeye dön</a>
    </div>
</div>
@await Html.PartialAsync("~/Views/Shared/Partials/_Pagination.cshtml", Model.PaginationInfo)