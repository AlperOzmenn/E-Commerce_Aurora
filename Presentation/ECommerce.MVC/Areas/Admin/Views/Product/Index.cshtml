@model ListViewModel<ProductListDTO>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Ürün Listesi";

    // Satır numarası başlat
    int rowNumber = ((Model.PaginationInfo.CurrentPage - 1) * Model.PaginationInfo.PageSize) + 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/user.css" />
}

<div class="content-header">
    <h2 class="page-title">Ürün Listesi</h2>
    <a asp-area="Admin" asp-controller="Product" asp-action="Trash" class="btn-primary btn-icon">
        <img src="~/images/icons/trash-icon.png" alt="Trash Icon" class="btn-icon-img" />
        <span>Silinen Ürünler</span>
    </a>
</div>

<!-- Arama Çubuğu (opsiyonel) -->
@await Html.PartialAsync("~/Views/Shared/Partials/_SearchBar.cshtml", Model.SearchQuery) 

<div class="table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().Description)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().FinalPrice)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().ImagePath)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().Stock)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().CreatedDate)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().UpdatedDate)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().DeletedDate)</th>
                <th>@Html.DisplayNameFor(model => model.Items.First().IsDeleted)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.FinalPrice ₺</td>
                    <td>
                        <img src="/images/productImages/@item.ImagePath"
                             onerror="this.src='/images/productImages/default.png'"
                             alt="ürün görseli" class="table-avatar" />
                    </td>
                    <td>@item.Stock</td>
                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.UpdatedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@item.DeletedDate?.ToString("dd.MM.yyyy")</td>
                    <td>@(item.IsDeleted ? "Silinmiş" : "Aktif")</td>
                    <td class="action-links">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                        <a asp-area="Admin" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">Detay</a> |
                        <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Sil</a> |
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("~/Views/Shared/Partials/_Pagination.cshtml", Model.PaginationInfo)